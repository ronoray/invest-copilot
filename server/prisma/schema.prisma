// Investment Co-Pilot - Complete Database Schema
// PostgreSQL with full authentication & integrations

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USER & AUTHENTICATION
// ============================================

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  phone         String?   @unique
  password      String
  name          String
  role          String    @default("user") // user, admin
  
  // Verification
  isActive      Boolean   @default(true)
  emailVerified Boolean   @default(false)
  phoneVerified Boolean   @default(false)
  
  // Security
  lastLoginAt   DateTime?
  loginAttempts Int       @default(0)
  lockedUntil   DateTime?
  
  // Password Reset
  resetToken    String?
  resetExpires  DateTime?
  
  // Preferences
  preferences   Json      @default("{}")
  
  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  sessions      Session[]
  holdings      Holding[]
  watchlist     Watchlist[]
  telegramUser  TelegramUser?
  auditLogs     AuditLog[]

  @@index([email])
  @@index([phone])
  @@index([isActive])
}

model Session {
  id        String   @id @default(uuid())
  userId    Int
  token     String   @unique
  ipAddress String?
  userAgent String?
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([token])
  @@index([expiresAt])
}

model OTP {
  id         Int      @id @default(autoincrement())
  identifier String   // email or phone
  code       String
  type       String   // login, verify_email, verify_phone, reset_password
  expiresAt  DateTime
  used       Boolean  @default(false)
  createdAt  DateTime @default(now())
  
  @@index([identifier, type])
  @@index([code])
  @@index([expiresAt])
}

// ============================================
// PORTFOLIO & HOLDINGS
// ============================================

model Holding {
  id           Int      @id @default(autoincrement())
  userId       Int
  symbol       String
  exchange     String   @default("NSE")
  quantity     Int
  avgPrice     Float
  currentPrice Float?
  targetPrice  Float?
  stopLoss     Float?
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, symbol, exchange])
  @@index([userId])
  @@index([symbol])
}

model Watchlist {
  id        Int      @id @default(autoincrement())
  userId    Int
  symbol    String
  exchange  String   @default("NSE")
  notes     String?
  alertAt   Float?
  createdAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, symbol, exchange])
  @@index([userId])
  @@index([symbol])
}

// ============================================
// TELEGRAM INTEGRATION
// ============================================

model TelegramUser {
  id          Int      @id @default(autoincrement())
  userId      Int      @unique
  telegramId  String   @unique
  username    String?
  firstName   String?
  isActive    Boolean  @default(true)
  isMuted     Boolean  @default(false)
  preferences Json     @default("{}")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  alertHistory AlertHistory[]

  @@index([telegramId])
  @@index([isActive])
}

model AlertHistory {
  id             Int      @id @default(autoincrement())
  telegramUserId Int
  symbol         String
  alertType      String   // BUY_SIGNAL, SELL_SIGNAL, TARGET_HIT, STOP_LOSS
  price          Float
  sent           Boolean  @default(false)
  createdAt      DateTime @default(now())

  telegramUser TelegramUser @relation(fields: [telegramUserId], references: [id], onDelete: Cascade)

  @@index([telegramUserId, createdAt])
  @@index([symbol, alertType, createdAt])
}

// ============================================
// NOTIFICATIONS
// ============================================

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  channel   String   // email, sms, whatsapp, telegram
  type      String   // buy_alert, sell_alert, daily_digest, otp
  subject   String?
  message   String
  status    String   @default("pending") // pending, sent, failed
  sentAt    DateTime?
  error     String?
  metadata  Json?
  createdAt DateTime @default(now())
  
  @@index([userId, status])
  @@index([channel, status])
  @@index([type, status])
  @@index([createdAt])
}

// ============================================
// AUDIT LOG
// ============================================

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int?
  action    String   // login, logout, create_holding, delete_holding, etc.
  entity    String?  // holding, watchlist, user
  entityId  Int?
  metadata  Json?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  @@index([userId, createdAt])
  @@index([action])
  @@index([createdAt])
}
