FROM node:20-slim

# Install OpenSSL for Prisma
RUN apt-get update -y && apt-get install -y openssl

WORKDIR /app

COPY server/package*.json ./
COPY server/prisma ./prisma/

RUN npm install --omit=dev

COPY server/ ./

# Generate Prisma Client
RUN npx prisma generate

EXPOSE 3100

CMD ["node", "index.js"]